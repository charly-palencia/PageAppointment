{
  "manifest_version": 2,

  "name": "Page Appointment",
  "description": "This extension open a specific page at a specific time.",
  "version": "0.1",
  "background": {
    "scripts": ["pageAppointment.js", "background.js"]
  },
  "permissions": [
    "tabs",
    "alarms",
    "background",
    "notifications"
  ],
  "web_accessible_resources": ["icon.png"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Page Appointment"
  }
}